<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.itgowo.gamestzb.Main.MainActivity">

    <ImageView
        android:id="@+id/User_Head_Img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:foreground="@drawable/background4"
        android:foregroundTint="@android:color/holo_orange_light"
        android:padding="9dp"
        android:src="@android:drawable/ic_popup_sync" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/cardLayout"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/countLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/line"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:showDividers="middle"
            android:visibility="invisible">


            <TextView
                android:id="@+id/msg5"
                style="@style/HeroNum"
                android:text="5星：0" />

            <TextView
                android:id="@+id/msg4"
                style="@style/HeroNum"
                android:text="4星：0" />

            <TextView
                android:id="@+id/msg3"
                style="@style/HeroNum"
                android:text="3星：0" />

            <TextView
                android:id="@+id/msg2"
                style="@style/HeroNum"
                android:text="2星：0" />

            <TextView
                android:id="@+id/msg1"
                style="@style/HeroNum"
                android:text="1星：0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/line"
            android:showDividers="middle">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/goodBt1"
                style="@style/DefaultButton"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:drawableRight="@drawable/yufu"
                android:text="@string/goodluck1" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/goodBt3"
                style="@style/DefaultButton"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:drawableRight="@drawable/yufu"
                android:text="@string/goodluck3" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/goodBt5"
                style="@style/DefaultButton"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:drawableRight="@drawable/yufu"
                android:text="@string/goodluck5"

                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/User_Head_Img"
        android:divider="@drawable/line"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"></LinearLayout>

    <ImageView
        android:id="@+id/helpDev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/shang"></ImageView>


    <TextView
        android:id="@+id/fabNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/helpDev"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:drawableTop="@android:drawable/ic_dialog_email"
        android:gravity="center"
        android:text="3333"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="10sp"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:background="@android:drawable/editbox_background"
        android:src="@android:drawable/ic_menu_edit"
        android:visibility="visible" />

    <TextView
        android:id="@+id/msg6"
        style="@style/HeroNum"
        android:layout_below="@+id/User_Head_Img"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/yufu"
        android:gravity="left"
        android:text="0" />

</RelativeLayout>
