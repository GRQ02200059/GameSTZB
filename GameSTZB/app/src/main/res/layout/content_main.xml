<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.itgowo.gamestzb.Main.MainActivity">

    <ImageView
        android:id="@+id/User_Head_Img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:foreground="@drawable/background4"
        android:foregroundTint="@android:color/holo_orange_light"
        android:padding="9dp"
        android:src="@android:drawable/ic_menu_mylocation" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/cardLayout"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/countLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/line"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:showDividers="middle"
            android:visibility="invisible">


            <TextView
                android:id="@+id/msg5"
                style="@style/HeroNum"
                android:text="5星：0" />

            <TextView
                android:id="@+id/msg4"
                style="@style/HeroNum"
                android:text="4星：0" />

            <TextView
                android:id="@+id/msg3"
                style="@style/HeroNum"
                android:text="3星：0" />

            <TextView
                android:id="@+id/msg2"
                style="@style/HeroNum"
                android:text="2星：0" />

            <TextView
                android:id="@+id/msg1"
                style="@style/HeroNum"
                android:text="1星：0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/goodBt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/yufu"
                android:text="招募1次" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/goodBt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/yufu"
                android:text="招募3次" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/goodBt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/yufu"
                android:text="招募5次" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/User_Head_Img"
        android:divider="@drawable/line"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle"></LinearLayout>

    <ImageView
        android:id="@+id/helpDev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/shang"></ImageView>

    <FrameLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff000000" />

        <library.PhotoView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/helpDev"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:background="@android:drawable/editbox_background"
        android:src="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/msg6"
        style="@style/HeroNum"
        android:layout_below="@+id/User_Head_Img"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/yufu"
        android:gravity="left"
        android:text="0" />

</RelativeLayout>
