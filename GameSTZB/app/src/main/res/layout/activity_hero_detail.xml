<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".HeroDetailActivity">

    <com.itgowo.gamestzb.View.HeroDetailView
        android:id="@+id/hero_detail_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"></com.itgowo.gamestzb.View.HeroDetailView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/share_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background_white"
            android:drawableLeft="@drawable/share_weixin"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/share_weichat"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/share_QQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_background_white"
            android:drawableLeft="@drawable/share_qq"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/share_qq"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/share_Timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_background_white"
            android:drawableLeft="@drawable/share_timeline"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/share_timeline"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/goback"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        android:src="@drawable/goback"
        android:tint="@color/country_qun" />
</RelativeLayout>