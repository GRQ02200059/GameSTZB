<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <library.PhotoView
        android:id="@+id/headimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/hero_000000" />

    <ImageView
        android:id="@+id/headForeground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/headimg"
        android:layout_alignLeft="@+id/headimg"
        android:layout_alignRight="@+id/headimg"
        android:layout_alignTop="@+id/headimg"
        android:scaleType="fitXY"
        android:src="@drawable/hero_mask_5" />

    <com.itgowo.gamestzb.View.RepeatImageView
        android:id="@+id/hero_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/headimg"
        android:layout_marginRight="5dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitEnd"
        android:src="@drawable/star2" />

    <ImageView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country"
        android:ems="1"
        android:gravity="left|top"
        android:text="@string/pleaseLogin"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/headimg"
        android:layout_alignRight="@+id/headimg"
        android:background="@drawable/type_qi"
        android:gravity="right|bottom"
        android:textColor="@android:color/white"
        android:textSize="6sp"></TextView>

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/headimg"
        android:layout_centerHorizontal="true"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="6sp"></TextView>
</RelativeLayout>