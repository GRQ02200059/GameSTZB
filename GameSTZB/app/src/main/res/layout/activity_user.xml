<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".UserActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <com.itgowo.gamestzb.View.HeroCard
            android:id="@+id/hero"
            android:layout_width="100dp"
            android:layout_height="130dp"></com.itgowo.gamestzb.View.HeroCard>

        <Button
            android:id="@+id/btn_login_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_background_white"
            android:drawableLeft="@drawable/share_qq"
            android:gravity="center"
            android:minWidth="110dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/loginqq"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reboot"
        android:layout_marginLeft="40dp"
        android:background="@drawable/photoframe"
        android:orientation="vertical"
        android:padding="20dp">

        <CheckBox
            android:id="@+id/isPlayVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="是否播放背景视频"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

        <CheckBox
            android:id="@+id/isPlayMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="是否播放背景音乐"
            android:textColor="@android:color/white"
            android:textSize="11sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/goback"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        android:src="@drawable/goback"
        android:tint="@color/country_qun" />

    <TextView
        android:id="@+id/reboot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:drawableTop="@android:drawable/stat_notify_error"
        android:text="重启App"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:tint="@color/country_qun" />
</RelativeLayout>